{
  "version": 2,
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",  // Adjust this if your static files are in a different folder
      "use": "@vercel/static-build",
      "config": {
        "distDir": "public"  // Adjust this to the correct output directory
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server.js"
    },
    {
      "src": "/(.*)",
      "dest": "index.html"  // Adjust this to point to your static files
    },
    {
      "src": "/.*",
      "status": 404,
      "dest": "server.js"  // Fallback for client-side routing
    }
  ]
}
